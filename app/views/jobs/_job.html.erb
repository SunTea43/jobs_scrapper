<div id="<%= dom_id job %>" class="card shadow-sm mb-3">
  <div class="card-body">
    <div class="row">
      <div class="col-md-8">
        <h2 class="card-title h4"><%= job.title %></h2>
        <h3 class="card-subtitle mb-3 text-muted h6"><%= job.company %> • <%= job.location %></h3>
        
        <div class="d-flex flex-wrap gap-2 mb-3">
          <span class="badge bg-success-subtle text-success border border-success-subtle p-2">
            <%= job.salary.presence || "Salary not specified" %>
          </span>
          <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle p-2">
            Source: <%= job.source %>
          </span>
          <% if job.score > 0 %>
            <span class="badge bg-warning text-dark p-2">
              <%= job.score %> ⭐ Rating
            </span>
          <% end %>
        </div>
      </div>
      <div class="col-md-4 text-md-end">
        <%= link_to "Apply Now", job.safe_url, class: "btn btn-primary btn-lg w-100", target: "_blank" if job.safe_url %>
      </div>
    </div>
    <hr>
    <div class="d-flex justify-content-between align-items-center text-muted small">
      <span>Added on <%= job.created_at.strftime("%B %d, %Y") %></span>
      <code>ID: <%= job.id %></code>
    </div>
  </div>
</div>
